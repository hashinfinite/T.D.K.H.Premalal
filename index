    <script>
        // --- ANIMATION LOGIC ---

        const skillData = [
            { id: 'ps-circle', value: 60 },
            { id: 'ai-circle', value: 70 },
            { id: 'cd-circle', value: 40 },
            { id: 'id-circle', value: 30 },
            { id: 'lr-circle', value: 65 },
            { id: 'pp-circle', value: 35 },
        ];

        const barData = [
            { id: 'html-bar', value: 40 },
            { id: 'css-bar', value: 35 },
            { id: 'js-bar', value: 10 },
        ];
        
        // Function to animate circular progress bar
        function animateCircle(element, percentage, color) {
            // Apply the conic-gradient to create the fill effect
            element.style.background = `conic-gradient(${color} ${percentage}%, #e0e0e0 ${percentage}% 100%)`;
        }

        // Function to animate linear progress bar
        function animateBar(element, percentage) {
            element.style.width = `${percentage}%`;
        }

        // Function to animate timeline items sequentially
        function animateTimeline() {
            const timelineItems = document.querySelectorAll('.timeline-item');
            timelineItems.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('animate-in');
                }, index * 200); // Staggered delay for effect
            });
        }

        function runAnimations() {
            // 1. Animate Circular Skills
            skillData.forEach(skill => {
                const element = document.getElementById(skill.id);
                if (element) {
                    const color = element.getAttribute('data-color') || '#1f2937';
                    animateCircle(element, skill.value, color);
                }
            });

            // 2. Animate Linear Skills (Extra Skills)
            barData.forEach(skill => {
                const element = document.getElementById(skill.id);
                if (element) {
                    animateBar(element, skill.value);
                }
            });

            // 3. Animate Education Timeline
            animateTimeline();
        }

        // Run animations once the entire page is loaded
        window.onload = function() {
            runAnimations();
        };

    </script>
